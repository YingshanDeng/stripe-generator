{
    "compilerOptions": {
        "module": "ESNext",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "dist",
        "declarationDir": "dist",
        "moduleResolution": "node",
        "typeRoots": [
            "node_modules/@types"
        ],
        "declaration": true,
        "lib": [
            "es2015",
            "es2017",
            "dom"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
}